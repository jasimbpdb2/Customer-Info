<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8f9fa">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ  BPDB Meter Lookup"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="#2c3e50" />

    <!-- Meter Input -->
    <EditText
        android:id="@+id/meterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter meter number"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginBottom="16dp" />

    <!-- Button Row 1: Prepaid/Postpaid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/prepaidBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ”‹ Prepaid"
            android:layout_marginEnd="4dp"
            android:background="#3498db"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/postpaidBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ’¡ Postpaid"
            android:layout_marginStart="4dp"
            android:background="#95a5a6"
            android:textColor="#ffffff" />

    </LinearLayout>

    <!-- Button Row 2: Submit/Exit -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸš€ Submit"
            android:layout_marginEnd="4dp"
            android:background="#27ae60"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/exitBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âŒ Exit"
            android:layout_marginStart="4dp"
            android:background="#e74c3c"
            android:textColor="#ffffff" />

    </LinearLayout>

    <!-- Results -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Results:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:padding="12dp">

        <TextView
            android:id="@+id/resultView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘† Select bill type, enter meter number and tap Submit"
            android:textSize="14sp"
            android:textColor="#2c3e50" />

    </ScrollView>

</LinearLayout>
